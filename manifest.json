{
  "name": "Schimanski Replacer",
  "short_name": "schimverb",
  "manifest_version": 2,
  "description": "Replace Schimanski with Verboten in your browser",
  "version": "0.1",

  "browser_action": {
    "default_icon": "v_icon.png",
    "default_title": "Schimanski Replacer"
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
        "js": ["hideSchim.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/"
  ]
}